/* pages/login/login.wxss */
.start-login{
  margin-top: 100rpx;
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  padding: 0 96rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.title{
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: rgba(16, 16, 16, 1);
  font-family: Arial,Helvetica,sans-serif;
  margin-top: 40rpx;
}
.login-wrapper{
  width: 558rpx;
  height: 800rpx;
  margin-top: 50rpx;
  border: 1px solid gray;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 40rpx rgba(170, 170, 170, 1);
}
.avatar{
  width: 180rpx;
  height: 180rpx;
  margin: 82rpx auto 82rpx;
  overflow: hidden;
  border-radius: 50%;
}
.avatar image{
  width: 100%;
}
.input-group{
  width: 416rpx;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  border: 1px solid gray;
  border-radius: 40rpx;
  padding-left: 40rpx;
  opacity: 0.5;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
input{
  flex: 1;
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
}
label{
  display: inline-flex;
  width: 72rpx;
  color: rgba(16,16,16,1);
  font-size: 28rpx;
  font-family: Arial,Helvetica,sans-serif;
}
.forgot-pwd{
  display: block;
  text-align: right;
  padding-right: 50rpx;
  margin: 20rpx auto 42rpx  0;
  box-sizing: border-box;
  height: 46rpx;
  line-height: 46rpx;
  opacity: 0.5;
  color: rgba(16,16,16,1);
  font-size: 24rpx;
  font-family: Arial,Helvetica,sans-serif;
}
.sign{
  width: 416rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-right: 40rpx;
  background-color: black;
  margin: 0 auto;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  opacity: 0.8;
  border-radius: 40rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.register{
  display: block;
  height: 46rpx;
  line-height: 46rpx;
  margin-top: 162rpx;
  color: black;
  font-size: 28rpx;
  text-align: center;
  opacity: 0.8;
  font-family: Arial, Helvetica, sans-serif;
}